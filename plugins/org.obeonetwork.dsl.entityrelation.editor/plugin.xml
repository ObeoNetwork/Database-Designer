<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="org.obeonetwork.dsl.entityrelation.presentation.EntityrelationModelWizardID"
            name="%_UI_EntityrelationModelWizard_label"
            class="org.obeonetwork.dsl.entityrelation.presentation.EntityrelationModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/EntityrelationModelFile.gif">
         <description>%_UI_EntityrelationModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="org.obeonetwork.dsl.entityrelation.presentation.EntityrelationEditorID"
            name="%_UI_EntityrelationEditor_label"
            icon="icons/full/obj16/EntityrelationModelFile.gif"
            extensions="entityrelation"
            class="org.obeonetwork.dsl.entityrelation.presentation.EntityrelationEditor"
            contributorClass="org.obeonetwork.dsl.entityrelation.presentation.EntityrelationActionBarContributor">
      </editor>
   </extension>

</plugin>
